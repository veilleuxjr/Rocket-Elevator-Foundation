




                    <section class="page-header quoteHeaderColor">
                    <div class="container">
    
                        <h1 class= "titleStyle">Intervention Form</h1>
    
                        <!-- breadcrumbs -->
                        <ol class="breadcrumb">
                            <li><a href="/" style="color:white">Home</a></li>
                            <li class="active">Rocket</li>
                        </ol><!-- /breadcrumbs -->
    
                    </div>
            </section>
                <!-- /PAGE HEADER -->


            <%= form_for @interventions do |f| %>

                <!-- form -->
                <section class= "formStyle" id= "toPrintQuote">

                    <div class="field">
                        <%= form.label :country_id %>
                        <%= form.select :country_id, 
                        options_for_select(Customer.select_values, user&.Customer&.id), 
                        { include_blank: true },
                        { class: 'remote-select', data: { target: '#user_intervention_id' }} %>
                    </div>

                   <div class="field">
                        <%= form.label :state_id %>
                        <%= form.select :state_id,
                        options_for_select(State.select_values(user&.country), user&.state&.id),
                        {},
                        {} %>
                    </div>

                    <!-- client battery -->
                     <div class= "field">
                            <label class= "labelStyle">Client's Batteries :</label>
                            <%= f.collection_select(:company_name, Battery.all, :id, :operation_certificate, prompt: 'Select Battery') %>
                        </div>  
                    <!-- /client battery --> 
                    <!-- client column -->
                     <div class= "chooseType">
                            <label class= "labelStyle">Client's Column :</label>
                            <%= f.collection_select(:company_name, Column.all, :id, :id, prompt: 'Select Column') %>
                        </div> 
                    <!-- /client column -->
                    <!-- client elevator -->
                       <div class= "chooseType">
                            <label class= "labelStyle">Client's Elevator :</label>
                            <%= f.collection_select(:company_name, Elevator.all, :id, :id, prompt: 'Select Elevator') %>
                        </div> 
                    <!-- /client elevator -->
                    <!-- client employee -->
                    <div class= "chooseType">
                            <label class= "labelStyle">Client's Employee :</label>
                            <%= f.collection_select(:company_name, Employee.all, :id, :first_name, prompt: 'Select Employee') %>
                        </div> 
                    <!-- /client employee -->
                    <br>                           
                    <button class="btn btn-green btn-lg" type= 'submit'>SUBMIT INTERVENTION</button>
                    
                   
                   
                    

                </section>
                <!-- /form -->
            <% end %>

            
    
            
